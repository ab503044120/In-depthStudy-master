<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            style="@style/StyleUIMainTitleTV"
            android:text="动画"
            android:textColor="@color/red"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_ui_main_item_height"
            android:layout_marginLeft="@dimen/dimen_ui_main_item_margin"
            android:layout_marginRight="@dimen/dimen_ui_main_item_margin"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:background="@color/red"
                android:orientation="horizontal">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dimen_ui_main_item_half_child_margin"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dimen_ui_main_item_child_margin"
                        android:layout_weight="1"
                        android:background="@color/red"
                        android:orientation="horizontal">
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dimen_ui_main_item_child_margin"
                        android:layout_weight="1"
                        android:background="@color/red"
                        android:orientation="horizontal">
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dimen_ui_main_item_half_child_margin"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dimen_ui_main_item_child_margin"
                        android:layout_weight="1"
                        android:background="@color/red"
                        android:orientation="horizontal">
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dimen_ui_main_item_child_margin"
                        android:layout_weight="1"
                        android:background="@color/red"
                        android:orientation="horizontal">
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            style="@style/StyleUIMainTitleTV"
            android:text="自定义View"
            android:textColor="@color/blue"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_ui_main_item_height"
            android:layout_marginLeft="@dimen/dimen_ui_main_item_margin"
            android:layout_marginRight="@dimen/dimen_ui_main_item_margin"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:background="@color/blue"
                android:orientation="horizontal">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dimen_ui_main_item_half_child_margin"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dimen_ui_main_item_child_margin"
                        android:layout_weight="1"
                        android:background="@color/blue"
                        android:orientation="horizontal">
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dimen_ui_main_item_child_margin"
                        android:layout_weight="1"
                        android:background="@color/blue"
                        android:orientation="horizontal">
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dimen_ui_main_item_half_child_margin"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dimen_ui_main_item_child_margin"
                        android:layout_weight="1"
                        android:background="@color/blue"
                        android:orientation="horizontal">
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dimen_ui_main_item_child_margin"
                        android:layout_weight="1"
                        android:background="@color/blue"
                        android:orientation="horizontal">
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            style="@style/StyleUIMainTitleTV"
            android:text="网络操作"
            android:textColor="@color/green"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_ui_main_item_height"
            android:layout_marginLeft="@dimen/dimen_ui_main_item_margin"
            android:layout_marginRight="@dimen/dimen_ui_main_item_margin"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_okhttp"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:background="@color/green"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_hardware_computer"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="OkHttp3"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dimen_ui_main_item_half_child_margin"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dimen_ui_main_item_child_margin"
                        android:layout_weight="1"
                        android:background="@color/green"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_retrofit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Retrofit"
                            android:textColor="@color/white"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dimen_ui_main_item_child_margin"
                        android:layout_weight="1"
                        android:background="@color/green"
                        android:orientation="horizontal">
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dimen_ui_main_item_half_child_margin"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dimen_ui_main_item_child_margin"
                        android:layout_weight="1"
                        android:background="@color/green"
                        android:orientation="horizontal">
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dimen_ui_main_item_child_margin"
                        android:layout_weight="1"
                        android:background="@color/green"
                        android:orientation="horizontal">
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            style="@style/StyleUIMainTitleTV"
            android:text="图片"
            android:textColor="@color/orange"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_ui_main_item_height"
            android:layout_marginLeft="@dimen/dimen_ui_main_item_margin"
            android:layout_marginRight="@dimen/dimen_ui_main_item_margin"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:background="@color/orange"
                android:orientation="horizontal">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dimen_ui_main_item_half_child_margin"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dimen_ui_main_item_child_margin"
                        android:layout_weight="1"
                        android:background="@color/orange"
                        android:orientation="horizontal">
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dimen_ui_main_item_child_margin"
                        android:layout_weight="1"
                        android:background="@color/orange"
                        android:orientation="horizontal">
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dimen_ui_main_item_half_child_margin"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dimen_ui_main_item_child_margin"
                        android:layout_weight="1"
                        android:background="@color/orange"
                        android:orientation="horizontal">
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dimen_ui_main_item_child_margin"
                        android:layout_weight="1"
                        android:background="@color/orange"
                        android:orientation="horizontal">
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            style="@style/StyleUIMainTitleTV"
            android:text="线程、注解、反射"
            android:textColor="@color/purple"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_ui_main_item_height"
            android:layout_marginLeft="@dimen/dimen_ui_main_item_margin"
            android:layout_marginRight="@dimen/dimen_ui_main_item_margin"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_multi_thread"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:background="@color/purple"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_multi_thread"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="多线程"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dimen_ui_main_item_half_child_margin"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dimen_ui_main_item_child_margin"
                        android:layout_weight="1"
                        android:background="@color/purple"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_thread"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="线程"
                            android:textColor="@color/white"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dimen_ui_main_item_child_margin"
                        android:layout_weight="1"
                        android:background="@color/purple"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_reflection"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="反射"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dimen_ui_main_item_half_child_margin"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dimen_ui_main_item_child_margin"
                        android:layout_weight="1"
                        android:background="@color/purple"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_thread_pool"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="线程池"
                            android:textColor="@color/white"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dimen_ui_main_item_child_margin"
                        android:layout_weight="1"
                        android:background="@color/purple"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_annotation"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="注解"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>